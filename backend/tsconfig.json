{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "resolveJsonModule": true,

    "noEmit": false,

    "skipLibCheck": true,

    "paths": {
      "*": ["./src/*"]
    }
  },
  "ts-node": { "esm": true },
  "include": ["src/**/*.ts"],
  "exclude": ["dist"]
}
